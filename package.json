    "rollup-plugin-terser": "^7.0.2",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "~5.3.3",
    "vite": "^6.1.1",
    "vitest": "^1.3.1"
  },
  "resolutions": {
    "string-width": "4.2.3",
    "strip-ansi": "6.0.1",
    "wrap-ansi": "7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajil-paul/shadcn-ui.git"
  }
